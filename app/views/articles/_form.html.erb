<%= form_with(model: article, local: true, html: {multipart: true}) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :article_location %>
  </div>

  <div class="field">
    <%= form.label :excerpt %>
    <%= form.text_field :excerpt, id: :article_excerpt %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :article_body %>
  </div>

  <div class="field">
    <%= form.label :published_at %>
    <%= form.text_field :published_at, id: :article_published_at, class: 'fecha' %>
  </div>
  
  <div class="field">
    <%= form.label :foto %>
    <%= form.file_field :foto, id: :foto %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
