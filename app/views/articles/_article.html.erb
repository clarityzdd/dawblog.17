<%= div_for article do %> 
  <h3>
    <%= link_to article.title, article %> 
    <% if article.owned_by? current_user  %> 
      <span class="actions">
        <%= link_to "edit", edit_article_path(article) %> 
        <%= link_to "delete",article, method: :delete, data: {confirm: "seguro?"} %> 
      </span>
    <% end %> 
  </h3>
   <%= image_tag(article.foto, size: "30x30") if article.foto.present? %>
   <%= article.body %> 
<% end %> 
